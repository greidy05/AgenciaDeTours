@model IEnumerable<AgenciaDeTours.Models.Destino>

@{
    ViewData["Title"] = "Gestión de Destinos";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4">
            <i class="fas fa-map-marked-alt me-2"></i>@ViewData["Title"]
        </h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Nuevo Destino
        </a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped" id="destinosTable">
                    <thead class="table-dark">
                        <tr>
                            <th><i class="fas fa-signature me-2"></i>Nombre</th>
                            <th><i class="fas fa-calendar-day me-2"></i>Días</th>
                            <th><i class="fas fa-clock me-2"></i>Horas</th>
                            <th><i class="fas fa-cloud-sun me-2"></i>Clima</th>
                            <th><i class="fas fa-tags me-2"></i>Tipo</th>
                            <th><i class="fas fa-running me-2"></i>Actividades</th>
                            <th><i class="fas fa-star me-2"></i>Atractivo</th>
                            <th><i class="fas fa-globe-americas me-2"></i>País</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.DuracionDias)</td>
                                <td>@Html.DisplayFor(modelItem => item.DuracionHoras)</td>
                                <td>
                                    <span class="badge bg-info text-dark">
                                        @Html.DisplayFor(modelItem => item.Clima)
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">
                                        @Html.DisplayFor(modelItem => item.TipoDestino)
                                    </span>
                                </td>
                                <td>
                                    <small class="text-muted">@Html.DisplayFor(modelItem => item.Actividades)</small>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.AtractivoPrincipal)</td>
                                <td>
                                    <span class="badge bg-primary">
                                        @Html.DisplayFor(modelItem => item.Pais.Nombre)
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.DestinoId"
                                           class="btn btn-sm btn-outline-primary" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.DestinoId"
                                           class="btn btn-sm btn-outline-info" title="Detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.DestinoId"
                                           class="btn btn-sm btn-outline-danger" title="Eliminar">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .table-hover tbody tr:hover {
            background-color: rgba(13, 110, 253, 0.05);
            transform: scale(1.01);
            transition: all 0.2s ease;
        }

        .badge {
            font-size: 0.85em;
            font-weight: 500;
            padding: 0.35em 0.65em;
        }

        .card {
            border-radius: 0.5rem;
            border: none;
        }

        .table {
            margin-bottom: 0;
        }

            .table th {
                font-weight: 600;
                text-transform: uppercase;
                font-size: 0.8rem;
                letter-spacing: 0.5px;
            }
    </style>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" />
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#destinosTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json'
                },
                responsive: true
            });
        });
    </script>
}