@model AgenciaDeTours.Models.Destino

@{
    ViewData["Title"] = "Detalles del Destino";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-map-marked-alt me-2"></i>@ViewData["Title"]
                        </h4>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model?.DestinoId" class="btn btn-sm btn-warning me-2">
                                <i class="fas fa-edit me-1"></i>Editar
                            </a>
                            <a asp-action="Index" class="btn btn-sm btn-light">
                                <i class="fas fa-arrow-left me-1"></i>Volver
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Columna izquierda -->
                        <div class="col-md-6">
                            <div class="detail-item mb-4">
                                <h5 class="text-primary">
                                    <i class="fas fa-signature me-2"></i>Información Básica
                                </h5>
                                <div class="ps-4">
                                    <div class="mb-3">
                                        <label class="fw-bold text-muted">Nombre:</label>
                                        <p class="lead">@Model.Nombre</p>
                                    </div>

                                    <div class="mb-3">
                                        <label class="fw-bold text-muted">País:</label>
                                        <span class="badge bg-primary">
                                            <i class="fas fa-globe-americas me-1"></i>
                                            @Html.DisplayFor(model => model.Pais.Nombre)
                                        </span>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="fw-bold text-muted">Duración (días):</label>
                                                <p>@Model.DuracionDias</p>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="fw-bold text-muted">Duración (horas):</label>
                                                <p>@Model.DuracionHoras</p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="fw-bold text-muted">Clima:</label>
                                        <span class="badge bg-info text-dark">
                                            <i class="fas fa-cloud-sun me-1"></i>
                                            @Model.Clima
                                        </span>
                                    </div>

                                    <div class="mb-3">
                                        <label class="fw-bold text-muted">Tipo de destino:</label>
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-tags me-1"></i>
                                            @Model.TipoDestino
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Columna derecha -->
                        <div class="col-md-6">
                            <div class="detail-item mb-4">
                                <h5 class="text-primary">
                                    <i class="fas fa-star me-2"></i>Atractivo Principal
                                </h5>
                                <div class="ps-4">
                                    <p class="lead">@Model.AtractivoPrincipal</p>
                                </div>
                            </div>

                            <div class="detail-item mb-4">
                                <h5 class="text-primary">
                                    <i class="fas fa-running me-2"></i>Actividades
                                </h5>
                                <div class="ps-4">
                                    <p>@Model.Actividades</p>
                                </div>
                            </div>

                            <div class="detail-item">
                                <h5 class="text-primary">
                                    <i class="fas fa-align-left me-2"></i>Descripción
                                </h5>
                                <div class="ps-4">
                                    <p class="text-justify">@Model.Descripcion</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between">
                        <small class="text-muted">
                            <i class="fas fa-calendar-alt me-1"></i> Última actualización: @DateTime.Now.ToString("dd/MM/yyyy")
                        </small>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model?.DestinoId" class="btn btn-sm btn-primary me-2">
                                <i class="fas fa-edit me-1"></i>Editar
                            </a>
                            <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                                <i class="fas fa-list me-1"></i>Ver todos
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 0.5rem;
            border: none;
        }

        .card-header {
            border-radius: 0.5rem 0.5rem 0 0 !important;
        }

        .detail-item {
            background-color: #f8f9fa;
            border-radius: 0.5rem;
            padding: 1rem;
            margin-bottom: 1rem;
        }

        .badge {
            font-size: 0.9em;
            font-weight: 500;
            padding: 0.5em 0.8em;
        }

        .lead {
            font-size: 1.1rem;
            font-weight: 500;
        }

        .text-justify {
            text-align: justify;
        }
    </style>
}