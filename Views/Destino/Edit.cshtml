@model AgenciaDeTours.Models.Destino
@{
    ViewData["Title"] = "Editar Destino";
    var climas = new List<string> { "Tropical", "Templado", "Seco", "Frío", "Polar", "Montaña" };
    var tiposDestino = new List<string> { "Playa", "Montaña", "Ciudad", "Rural", "Aventura", "Cultural" };
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-edit me-2"></i>@ViewData["Title"]
                        </h4>
                        <a asp-action="Index" class="btn btn-sm btn-light">
                            <i class="fas fa-arrow-left me-1"></i>Volver
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="DestinoId" />

                        <div class="row g-3">
                            <!-- Primera columna -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Nombre" class="form-label fw-bold"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-signature"></i></span>
                                        <input asp-for="Nombre" class="form-control" placeholder="Nombre del destino" required />
                                    </div>
                                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="PaisId" class="form-label fw-bold">País</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-globe-americas"></i></span>
                                        <select asp-for="PaisId" class="form-select" asp-items="ViewBag.Paises" required>
                                            <option value="">Seleccione un país</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="PaisId" class="text-danger small"></span>
                                </div>

                                <div class="row g-2">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="DuracionDias" class="form-label fw-bold">Días</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fas fa-calendar-day"></i></span>
                                                <input asp-for="DuracionDias" class="form-control" placeholder="Días" min="1" required />
                                            </div>
                                            <span asp-validation-for="DuracionDias" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="DuracionHoras" class="form-label fw-bold">Horas</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fas fa-clock"></i></span>
                                                <input asp-for="DuracionHoras" class="form-control" placeholder="Horas" min="0" max="23" required />
                                            </div>
                                            <span asp-validation-for="DuracionHoras" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Clima" class="form-label fw-bold">Clima</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-cloud-sun"></i></span>
                                        <select asp-for="Clima" class="form-select" required>
                                            <option value="">Seleccione clima</option>
                                            @foreach (var clima in climas)
                                            {
                                                <option value="@clima">@clima</option>
                                            }
                                        </select>
                                    </div>
                                    <span asp-validation-for="Clima" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Segunda columna -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TipoDestino" class="form-label fw-bold">Tipo de Destino</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-tags"></i></span>
                                        <select asp-for="TipoDestino" class="form-select" required>
                                            <option value="">Seleccione tipo</option>
                                            @foreach (var tipo in tiposDestino)
                                            {
                                                <option value="@tipo">@tipo</option>
                                            }
                                        </select>
                                    </div>
                                    <span asp-validation-for="TipoDestino" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="AtractivoPrincipal" class="form-label fw-bold">Atractivo Principal</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-star"></i></span>
                                        <input asp-for="AtractivoPrincipal" class="form-control" placeholder="Atractivo principal" required />
                                    </div>
                                    <span asp-validation-for="AtractivoPrincipal" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Actividades" class="form-label fw-bold">Actividades</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-running"></i></span>
                                        <textarea asp-for="Actividades" class="form-control" rows="3" placeholder="Actividades disponibles" required></textarea>
                                    </div>
                                    <span asp-validation-for="Actividades" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Descripcion" class="form-label fw-bold">Descripción</label>
                                    <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Descripción detallada"></textarea>
                                    <span asp-validation-for="Descripcion" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-save me-2"></i>Guardar Cambios
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 0.5rem;
            border: none;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        }

        .card-header {
            border-radius: 0.5rem 0.5rem 0 0 !important;
            background: linear-gradient(135deg, #0d6efd 0%, #0b5ed7 100%);
        }

        .form-control, .form-select {
            border-radius: 0.375rem;
            transition: all 0.3s ease;
        }

            .form-control:focus, .form-select:focus {
                border-color: #86b7fe;
                box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
            }

        .input-group-text {
            background-color: #f8f9fa;
            min-width: 40px;
            justify-content: center;
        }

        textarea.form-control {
            min-height: 100px;
            resize: vertical;
        }

        .btn-primary {
            background-color: #0d6efd;
            border: none;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

        .btn-outline-secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .was-validated .form-control:valid,
        .was-validated .form-control:invalid {
            background-position: right calc(0.375em + 0.1875rem) center;
            padding-right: calc(1.5em + 0.75rem);
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Validación en tiempo real mejorada
            (function () {
                'use strict'
                var forms = document.querySelectorAll('.needs-validation')
                Array.prototype.slice.call(forms)
                    .forEach(function (form) {
                        form.addEventListener('submit', function (event) {
                            if (!form.checkValidity()) {
                                event.preventDefault()
                                event.stopPropagation()
                            }
                            form.classList.add('was-validated')
                        }, false)
                    })
            })();

            // Validación personalizada para el select de país
            $.validator.addMethod("valueNotEquals", function(value, element, arg) {
                return arg !== value;
            }, "Debe seleccionar un país");

            $("#PaisId").rules("add", {
                valueNotEquals: ""
            });

            // Validación para los selects de clima y tipo de destino
            $("#Clima, #TipoDestino").rules("add", {
                valueNotEquals: ""
            });

            // Deshabilitar botón al enviar y mostrar spinner
            $("form").submit(function() {
                var submitBtn = $(this).find("button[type='submit']");
                submitBtn.prop("disabled", true);
                submitBtn.html('<i class="fas fa-spinner fa-spin me-2"></i> Guardando...');
            });

            // Establecer valores seleccionados para los dropdowns
            $("#Clima").val("@Model.Clima");
            $("#TipoDestino").val("@Model.TipoDestino");
        });
    </script>
}