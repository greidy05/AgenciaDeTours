@model AgenciaDeTours.Models.Tour
@{
    ViewData["Title"] = "Crear Nuevo Tour";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">
                            <i class="fas fa-route me-2"></i>@ViewData["Title"]
                        </h3>
                        <a asp-action="Index" class="btn btn-sm btn-light">
                            <i class="fas fa-arrow-left me-1"></i> Volver
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    <form asp-action="Create" id="tourForm" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row g-3">
                            <!-- Columna Izquierda -->
                            <div class="col-md-6">
                                <!-- Nombre del Tour -->
                                <div class="mb-3">
                                    <label asp-for="Nombre" class="form-label fw-bold">
                                        <i class="fas fa-signature text-primary me-2"></i>Nombre del Tour
                                    </label>
                                    <input asp-for="Nombre" class="form-control" placeholder="Ej: Tour por la selva" required />
                                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                                </div>

                                <!-- País -->
                                <div class="mb-3">
                                    <label asp-for="PaisId" class="form-label fw-bold">
                                        <i class="fas fa-globe-americas text-primary me-2"></i>País
                                    </label>
                                    <select asp-for="PaisId" class="form-select" asp-items="ViewBag.Paises" required>
                                        <option value="">-- Seleccione un país --</option>
                                    </select>
                                    <span asp-validation-for="PaisId" class="text-danger small"></span>
                                </div>

                                <!-- Destino -->
                                <div class="mb-3">
                                    <label asp-for="DestinoId" class="form-label fw-bold">
                                        <i class="fas fa-map-marker-alt text-primary me-2"></i>Destino
                                    </label>
                                    <select asp-for="DestinoId" class="form-select" asp-items="ViewBag.Destinos" required>
                                        <option value="">-- Seleccione un destino --</option>
                                    </select>
                                    <span asp-validation-for="DestinoId" class="text-danger small"></span>
                                </div>

                                <!-- Fecha y Hora -->
                                <div class="row g-2">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Fecha" class="form-label fw-bold">Fecha</label>
                                            <input asp-for="Fecha" type="date" class="form-control" required />
                                            <span asp-validation-for="Fecha" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Hora" class="form-label fw-bold">Hora</label>
                                            <input asp-for="Hora" type="time" class="form-control" required />
                                            <span asp-validation-for="Hora" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Columna Derecha -->
                            <div class="col-md-6">
                                <!-- Precio -->
                                <div class="mb-3">
                                    <label asp-for="Precio" class="form-label fw-bold">
                                        <i class="fas fa-dollar-sign text-primary me-2"></i>Precio
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="Precio" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                                    </div>
                                    <span asp-validation-for="Precio" class="text-danger small"></span>
                                </div>

                                <!-- Duración -->
                                <div class="mb-3">
                                    <label asp-for="DuracionTotalHoras" class="form-label fw-bold">
                                        <i class="fas fa-clock text-primary me-2"></i>Duración (horas)
                                    </label>
                                    <input asp-for="DuracionTotalHoras" type="number" class="form-control" min="1" required />
                                    <span asp-validation-for="DuracionTotalHoras" class="text-danger small"></span>
                                </div>

                                <!-- Fecha/Hora Fin -->
                                <div class="mb-3">
                                    <label asp-for="FechaHoraFin" class="form-label fw-bold">
                                        <i class="fas fa-calendar-times text-primary me-2"></i>Fecha/Hora Finalización
                                    </label>
                                    <input asp-for="FechaHoraFin" type="datetime-local" class="form-control" required />
                                    <span asp-validation-for="FechaHoraFin" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-save me-2"></i>Crear Tour
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 0.5rem;
            overflow: hidden;
        }

        .card-header {
            border-bottom: none;
        }

        .form-control, .form-select {
            border-radius: 0.375rem;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }

            .form-control:focus, .form-select:focus {
                border-color: #86b7fe;
                box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
            }

        .input-group-text {
            background-color: #f8f9fa;
        }

        .btn-primary {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
                border-color: #0a58ca;
                transform: translateY(-1px);
            }

        .alert {
            border-radius: 0.375rem;
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Validación personalizada para selects
            $.validator.addMethod("valueNotEquals", function(value, element, arg) {
                return arg !== value;
            }, "Este campo es requerido");

            $("#PaisId, #DestinoId").rules("add", {
                valueNotEquals: ""
            });

            // Deshabilitar el botón al enviar y mostrar spinner
            $("#tourForm").submit(function() {
                var submitBtn = $(this).find("button[type='submit']");
                submitBtn.prop("disabled", true);
                submitBtn.html('<i class="fas fa-spinner fa-spin me-2"></i> Guardando...');
            });

            // Actualizar destinos cuando se selecciona un país
            $("#PaisId").change(function() {
                var paisId = $(this).val();
                if (paisId) {
                    $.getJSON('/Tours/GetDestinosByPais', { paisId: paisId }, function(data) {
                        var items = '<option value="">-- Seleccione un destino --</option>';
                        $.each(data, function(i, destino) {
                            items += '<option value="' + destino.value + '">' + destino.text + '</option>';
                        });
                        $("#DestinoId").html(items);
                    });
                } else {
                    $("#DestinoId").html('<option value="">-- Seleccione un destino --</option>');
                }
            });

            // Calcular fecha/hora fin automáticamente
            $("#Fecha, #Hora, #DuracionTotalHoras").change(function() {
                calcularFechaFin();
            });

            function calcularFechaFin() {
                var fecha = $("#Fecha").val();
                var hora = $("#Hora").val();
                var duracion = parseInt($("#DuracionTotalHoras").val()) || 0;

                if (fecha && hora && duracion > 0) {
                    var fechaInicio = new Date(fecha + 'T' + hora);
                    fechaInicio.setHours(fechaInicio.getHours() + duracion);

                    // Formatear para datetime-local
                    var fechaFin = fechaInicio.toISOString().slice(0, 16);
                    $("#FechaHoraFin").val(fechaFin);
                }
            }
        });
    </script>
}