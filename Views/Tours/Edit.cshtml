@model AgenciaDeTours.Models.Tour
@{
    ViewData["Title"] = "Editar Tour";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-edit me-2"></i>@ViewData["Title"]
                        </h4>
                        <a asp-action="Index" class="btn btn-sm btn-light">
                            <i class="fas fa-arrow-left me-1"></i>Volver
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="TourId" />

                        <div class="row g-3">
                            <!-- Primera columna -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Nombre" class="form-label fw-bold"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-signature"></i></span>
                                        <input asp-for="Nombre" class="form-control" placeholder="Nombre del tour" required />
                                    </div>
                                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="PaisId" class="form-label fw-bold">País</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-globe-americas"></i></span>
                                        <select asp-for="PaisId" class="form-select" asp-items="ViewBag.Paises" required>
                                            <option value="">-- Seleccione un país --</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="PaisId" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="DestinoId" class="form-label fw-bold">Destino</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                        <select asp-for="DestinoId" class="form-select" asp-items="ViewBag.Destinos" required>
                                            <option value="">-- Seleccione un destino --</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="DestinoId" class="text-danger small"></span>
                                </div>

                                <div class="row g-2">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Fecha" class="form-label fw-bold">Fecha</label>
                                            <input asp-for="Fecha" type="date" class="form-control"
                                                   value="@Model.Fecha.ToString("yyyy-MM-dd")" required />
                                            <span asp-validation-for="Fecha" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Hora" class="form-label fw-bold">Hora</label>
                                            <input asp-for="Hora" type="time" class="form-control"
                                                   value="@Model.Hora.ToString(@"hh\:mm")" required />
                                            <span asp-validation-for="Hora" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Segunda columna -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Precio" class="form-label fw-bold">Precio</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="Precio" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                                    </div>
                                    <span asp-validation-for="Precio" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="DuracionTotalHoras" class="form-label fw-bold">Duración (horas)</label>
                                    <input asp-for="DuracionTotalHoras" type="number" class="form-control" min="1" required />
                                    <span asp-validation-for="DuracionTotalHoras" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="FechaHoraFin" class="form-label fw-bold">Fecha/Hora Finalización</label>
                                    <input asp-for="FechaHoraFin" type="datetime-local" class="form-control"
                                           value="@Model.FechaHoraFin.ToString("yyyy-MM-ddTHH:mm")" required />
                                    <span asp-validation-for="FechaHoraFin" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Estado Actual</label>
                                    <div class="form-control-plaintext">
                                        <span class="badge @(Model.Estado == "Vigente" ? "bg-success" : "bg-secondary")">
                                            @Model.Estado
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-save me-2"></i>Guardar Cambios
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 0.5rem;
            border: none;
        }

        .card-header {
            border-radius: 0.5rem 0.5rem 0 0 !important;
        }

        .form-control, .form-select {
            border-radius: 0.375rem;
        }

        .input-group-text {
            background-color: #f8f9fa;
        }

        .badge {
            font-size: 0.9em;
            font-weight: 500;
            padding: 0.5em 0.8em;
        }

        .btn-primary {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
                border-color: #0a58ca;
            }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Validación personalizada para selects
            $.validator.addMethod("valueNotEquals", function(value, element, arg) {
                return arg !== value;
            }, "Este campo es requerido");

            $("#PaisId, #DestinoId").rules("add", {
                valueNotEquals: ""
            });

            // Deshabilitar el botón al enviar y mostrar spinner
            $("form").submit(function() {
                var submitBtn = $(this).find("button[type='submit']");
                submitBtn.prop("disabled", true);
                submitBtn.html('<i class="fas fa-spinner fa-spin me-2"></i> Guardando...');
            });

            // Actualizar destinos cuando se selecciona un país
            $("#PaisId").change(function() {
                var paisId = $(this).val();
                if (paisId) {
                    $.getJSON('/Tours/GetDestinosByPais', { paisId: paisId }, function(data) {
                        var items = '<option value="">-- Seleccione un destino --</option>';
                        $.each(data, function(i, destino) {
                            items += '<option value="' + destino.value + '">' + destino.text + '</option>';
                        });
                        $("#DestinoId").html(items);
                    });
                } else {
                    $("#DestinoId").html('<option value="">-- Seleccione un destino --</option>');
                }
            });

            // Calcular fecha/hora fin automáticamente
            $("#Fecha, #Hora, #DuracionTotalHoras").change(function() {
                calcularFechaFin();
            });

            function calcularFechaFin() {
                var fecha = $("#Fecha").val();
                var hora = $("#Hora").val();
                var duracion = parseInt($("#DuracionTotalHoras").val()) || 0;

                if (fecha && hora && duracion > 0) {
                    var fechaInicio = new Date(fecha + 'T' + hora);
                    fechaInicio.setHours(fechaInicio.getHours() + duracion);

                    // Formatear para datetime-local
                    var fechaFin = fechaInicio.toISOString().slice(0, 16);
                    $("#FechaHoraFin").val(fechaFin);
                }
            }
        });
    </script>
}