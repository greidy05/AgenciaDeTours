@model AgenciaDeTours.Models.Tour
@{
    ViewData["Title"] = "Detalles del Tour";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-info-circle me-2"></i>@ViewData["Title"]
                        </h4>
                        <a asp-action="Index" class="btn btn-sm btn-light">
                            <i class="fas fa-arrow-left me-1"></i>Volver
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Columna izquierda -->
                        <div class="col-md-6">
                            <div class="detail-item mb-4">
                                <h5 class="text-primary">
                                    <i class="fas fa-signature me-2"></i>Información Básica
                                </h5>
                                <div class="ps-4">
                                    <div class="mb-3">
                                        <label class="fw-bold text-muted">Nombre:</label>
                                        <p class="lead">@Model.Nombre</p>
                                    </div>

                                    <div class="mb-3">
                                        <label class="fw-bold text-muted">País:</label>
                                        <span class="badge bg-primary">
                                            <i class="fas fa-globe-americas me-1"></i>
                                            @Model.Pais?.Nombre
                                        </span>
                                    </div>

                                    <div class="mb-3">
                                        <label class="fw-bold text-muted">Destino:</label>
                                        <span class="badge bg-info text-dark">
                                            <i class="fas fa-map-marker-alt me-1"></i>
                                            @Model.Destino?.Nombre
                                        </span>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="fw-bold text-muted">Fecha:</label>
                                                <p>@Model.Fecha.ToString("dd/MM/yyyy")</p>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="fw-bold text-muted">Hora:</label>
                                                <p>@Model.Hora.ToString(@"hh\:mm")</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Columna derecha -->
                        <div class="col-md-6">
                            <div class="detail-item mb-4">
                                <h5 class="text-primary">
                                    <i class="fas fa-money-bill-wave me-2"></i>Información Económica
                                </h5>
                                <div class="ps-4">
                                    <div class="mb-3">
                                        <label class="fw-bold text-muted">Precio:</label>
                                        <p class="lead">@Model.Precio.ToString("C2")</p>
                                    </div>

                                    <div class="mb-3">
                                        <label class="fw-bold text-muted">ITBIS (18%):</label>
                                        <p>@Model.Itbis.ToString("C2")</p>
                                    </div>

                                    <div class="mb-3">
                                        <label class="fw-bold text-muted">Precio Total:</label>
                                        <p class="lead">@((Model.Precio + Model.Itbis).ToString("C2"))</p>
                                    </div>
                                </div>
                            </div>

                            <div class="detail-item">
                                <h5 class="text-primary">
                                    <i class="fas fa-clock me-2"></i>Duración
                                </h5>
                                <div class="ps-4">
                                    <div class="mb-3">
                                        <label class="fw-bold text-muted">Duración Total:</label>
                                        <p>@Model.DuracionTotalHoras horas</p>
                                    </div>

                                    <div class="mb-3">
                                        <label class="fw-bold text-muted">Fecha/Hora Finalización:</label>
                                        <p>@Model.FechaHoraFin.ToString("dd/MM/yyyy HH:mm")</p>
                                    </div>

                                    <div class="mb-3">
                                        <label class="fw-bold text-muted">Estado:</label>
                                        <span class="badge @(Model.Estado == "Vigente" ? "bg-success" : "bg-secondary")">
                                            @Model.Estado
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between">
                        <small class="text-muted">
                            <i class="fas fa-calendar-alt me-1"></i> Última actualización: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                        </small>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.TourId" class="btn btn-primary me-2">
                                <i class="fas fa-edit me-1"></i>Editar
                            </a>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-list me-1"></i>Ver todos
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 0.5rem;
            border: none;
        }

        .card-header {
            border-radius: 0.5rem 0.5rem 0 0 !important;
        }

        .detail-item {
            background-color: #f8f9fa;
            border-radius: 0.5rem;
            padding: 1rem;
            margin-bottom: 1rem;
        }

        .badge {
            font-size: 0.9em;
            font-weight: 500;
            padding: 0.5em 0.8em;
        }

        .lead {
            font-size: 1.1rem;
            font-weight: 500;
        }

        .btn-primary {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
                border-color: #0a58ca;
            }
    </style>
}